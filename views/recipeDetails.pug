// recipeDetails.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Recipe Details
    link(rel="stylesheet", href="/styles/styles.css")
    style.
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background-color: #333; /* Darker background color */
        color: white; /* Text color */
      }
      .back-button {
        font-size: 18px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        cursor: pointer;
      }
      .recipe-details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .recipe-details {
        margin-top: 20px;
      }
  body
    header.header
      h1 Recipe Details
      a.back-button(href="/main") Back
    main
      .recipe-details-container
        // Display recipe details here
    script(src="/js/recipeDetails.js")
